{
  "expo": {
    "name": "ARK Garage",
    "slug": "ark-garage-mobile",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.arkgarage.mobile",
      "infoPlist": {
        "UIRequiresFullScreen": false,
        "NSFaceIDUsageDescription": "Usar Face ID para login rapido",
        "NSCameraUsageDescription": "Tirar fotos de veiculos e pecas",
        "NSPhotoLibraryUsageDescription": "Selecionar fotos de veiculos e pecas"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.arkgarage.mobile",
      "usesCleartextTraffic": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#667eea"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Usar Face ID para login rapido"
        }
      ],
      [
        "@sentry/react-native",
        {
          "organization": "YOUR_SENTRY_ORG",
          "project": "ark-garage-mobile"
        }
      ]
    ],
    "scheme": "arkgarage"
  }
}
